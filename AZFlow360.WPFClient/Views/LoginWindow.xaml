<Window x:Class="AZFlow360.WPFClient.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AZFlow360.WPFClient.ViewModels"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="450" Width="380"
        WindowStartupLocation="CenterScreen">



    <StackPanel Margin="30">
        <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Text="Tên đăng nhập:"/>
        <TextBox Name="UsernameTextBox" 
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5,0,10"/>

        <TextBlock Text="Mật khẩu:"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5,0,5"/>

        <TextBlock HorizontalAlignment="Right" Margin="0,0,0,15">
            <Hyperlink Command="{Binding ForgotPasswordCommand}" TextDecorations="None" Foreground="DodgerBlue">
                Quên mật khẩu?
            </Hyperlink>
        </TextBlock>

        <Button Content="Đăng nhập" 
                Height="40" 
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                FontWeight="Bold"
                Background="DodgerBlue"
                Foreground="White"/>

        <Grid Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Separator Grid.Column="0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="hoặc" Margin="10,0" Foreground="Gray"/>
            <Separator Grid.Column="2" VerticalAlignment="Center"/>
        </Grid>

        <Button Name="GoogleLoginButton" Height="40" Command="{Binding LoginWithGmailCommand}"
                Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="G" FontSize="16" FontWeight="Bold" Foreground="#4285F4" VerticalAlignment="Center"/>
                <TextBlock Text="Đăng nhập với Google" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#555555"/>
            </StackPanel>
        </Button>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Chưa có tài khoản? "/>
            <TextBlock>
                <Hyperlink Command="{Binding NavigateToSignUpCommand}" TextDecorations="None" Foreground="DodgerBlue">
                    Đăng ký ngay
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <TextBlock Text="{Binding ErrorMessage}" 
                   Foreground="Red" 
                   Margin="0,15,0,0" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</Window>