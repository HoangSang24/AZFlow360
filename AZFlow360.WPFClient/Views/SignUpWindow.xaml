<Window x:Class="AZFlow360.WPFClient.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AZFlow360.WPFClient.Views"
        xmlns:converters="clr-namespace:AZFlow360.WPFClient.Converters"
        mc:Ignorable="d"
        Title="Đăng Ký Tài Khoản Mới"
        Height="550" Width="400"
        MinHeight="550" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:ObjectArrayConverter x:Key="ObjectArrayConverter"/>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="8" Background="#F7F7F7" Margin="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="#CCCCCC" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="30">
                <TextBlock Text="Tạo Tài Khoản" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25" Foreground="#333333"/>

                <TextBlock Text="Họ và tên:" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="8,5" FontSize="14"/>

                <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="8,5" FontSize="14"/>

                <TextBlock Text="Email:" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="8,5" FontSize="14"/>

                <TextBlock Text="Mật khẩu:" Margin="0,0,0,5" Foreground="#555"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Padding="8,5" FontSize="14"/>

                <TextBlock Text="Xác nhận mật khẩu:" Margin="0,0,0,5" Foreground="#555"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,15" Padding="8,5" FontSize="14"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Crimson"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="Đăng ký"
                        IsDefault="True"
                        Command="{Binding SignUpCommand}"
                        Padding="10,8"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.CommandParameter>
                        <MultiBinding Converter="{StaticResource ObjectArrayConverter}">
                            <Binding ElementName="PasswordBox"/>
                            <Binding ElementName="ConfirmPasswordBox"/>
                        </MultiBinding>
                    </Button.CommandParameter>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Run Text="Đã có tài khoản?" Foreground="#555"/>
                    <Hyperlink Command="{Binding NavigateToLoginCommand}" TextDecorations="None">
                        <Run Text="Đăng nhập ngay" FontWeight="SemiBold" Foreground="#007ACC"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>