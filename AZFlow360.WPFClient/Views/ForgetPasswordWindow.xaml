<Window x:Class="AZFlow360.WPFClient.Views.ForgetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AZFlow360.WPFClient.ViewModels"
        mc:Ignorable="d"
        Title="Quên mật khẩu" Height="380" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">



    <Grid Background="#F4F6F8">
        <StackPanel Margin="30">
            <TextBlock Text="Lấy lại mật khẩu" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#172B4D"/>

            <TextBlock Text="Vui lòng nhập địa chỉ email đã đăng ký. Chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu." 
                       TextWrapping="Wrap" 
                       Margin="0,10,0,25" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Foreground="#6B778C"/>

            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{Binding StatusColor}" 
                       Margin="0,0,0,10" 
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>

            <TextBlock Text="Địa chỉ Email:" Margin="0,0,0,5" Foreground="#172B4D"/>
            <TextBox Name="EmailTextBox" 
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                     Height="40"
                     VerticalContentAlignment="Center"
                     Padding="10,0"/>

            <Button Content="Gửi yêu cầu" 
                    Height="40" 
                    Margin="0,20,0,10"
                    Command="{Binding SendRequestCommand}"
                    FontWeight="Bold"
                    Background="DodgerBlue"
                    Foreground="White"/>

            <Button Content="Quay về Đăng nhập" 
                    Height="40"
                    Command="{Binding GoBackCommand}"
                    Background="Transparent"
                    BorderBrush="Gray"
                    Foreground="Gray"/>

        </StackPanel>
    </Grid>
</Window>